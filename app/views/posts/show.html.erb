<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <%= @post.content %>
    </div>
    
    
    <div class="post-menus">
      <%= link_to("削除", "/posts/#{@post.id}/destroy",{method: "post"}) %>
    </div>
    
     <div class="form">
      <div class="form-body1">
          
      <%= form_tag("/posts/#{@post.id}/yes_create") do %>
        <input type="submit" name="post_id" value="Yes">
      <% end %>
      
      <%= form_tag("/posts/#{@post.id}/no_create") do %>
        <input type="submit" name="post_id" value="No">
      <% end %>
      
      </div>
    </div>
    
    
    
  </div>
</div>